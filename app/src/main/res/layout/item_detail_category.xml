<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewFood"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_recipes_of_week"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/foodTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/malisemibold"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="Black Karaage with Curry Bento"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewFood"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/foodDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/maliregular"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:text="This Japanese modern izakaya dish features crispy black ka This Japanese modern izakaya dish features crispy black ka"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewFood"
        app:layout_constraintTop_toBottomOf="@id/foodTitle" />


    <ImageView
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_share"
        android:id="@+id/share"
        app:layout_constraintStart_toEndOf="@id/imageViewFood"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/foodDescription"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <ImageView
        android:layout_marginStart="4dp"
        android:id="@+id/like"
        android:src="@drawable/ic_like"
        app:layout_constraintStart_toEndOf="@id/share"
        app:layout_constraintTop_toBottomOf="@id/foodDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>