<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:orientation="horizontal"
    android:padding="6dp">

    <FrameLayout
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:background="@drawable/bacground_stt">

        <TextView
            android:id="@+id/number_buoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/maliregular"
            android:includeFontPadding="false"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </FrameLayout>

    <TextView
        android:layout_marginStart="4dp"
        android:id="@+id/description_buoc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:ellipsize="end"
        android:fontFamily="@font/maliregular"
        android:includeFontPadding="false"
        android:maxLines="3"
        android:text="In a large bowl, whisk together the flour, baking powder, salt, and sugar"
        android:textColor="@color/black"
        android:textSize="16sp" />


</LinearLayout>